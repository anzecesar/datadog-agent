[Unit]
Description="Datadog Network Tracer"
After=network.target datadog-agent.service
BindsTo=datadog-agent.service
StartLimitIntervalSec=10
StartLimitBurst=5

[Service]
Type=simple
PIDFile=<%= install_dir %>/run/network-tracer.pid
Restart=on-failure
ExecStart=<%= install_dir %>/embedded/bin/network-tracer --config=<%= etc_dir %>/datadog.yaml --pid=<%= install_dir %>/run/network-tracer.pid

[Install]
WantedBy=multi-user.target
